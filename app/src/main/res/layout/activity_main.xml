<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg02"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txt_sl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="SRI LANKA"
        android:textColor="#03D2BE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_welcome" />

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Welcome Back!"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_compass"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="true"
        app:layout_constraintBottom_toTopOf="@+id/scroll_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toEndOf="@+id/txt_welcome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101"
        app:srcCompat="@drawable/compass" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="347dp"
        android:layout_height="465dp"
        android:fillViewport="true"
        android:layoutDirection="locale"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_sl2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgbtn_central"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:contentDescription="true"
                app:srcCompat="@drawable/central" />

            <TextView
                android:id="@+id/txt_central"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CENTRAL"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/imgbtn_uwa"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_margin="10dp"
                android:contentDescription="true"
                app:srcCompat="@drawable/uwa" />

            <TextView
                android:id="@+id/txt_uwa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UWA"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/imgbtn_west"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_margin="10dp"
                android:contentDescription="true"
                app:srcCompat="@drawable/west" />

            <TextView
                android:id="@+id/txt_west"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WEST"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/imgbtn_south"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_margin="10dp"
                android:contentDescription="true"
                app:srcCompat="@drawable/south" />

            <TextView
                android:id="@+id/txt_south"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SOUTH"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/imgbtn_wayamba"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_margin="10dp"
                android:contentDescription="true"
                app:srcCompat="@drawable/north_west" />

            <TextView
                android:id="@+id/txt_wayamba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WAYAMBA"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/imgbtn_northcentral"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_margin="10dp"
                android:contentDescription="true"
                app:srcCompat="@drawable/north_central" />

            <TextView
                android:id="@+id/txt_northcentral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NORTH CENTRAL"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/imgbtn_sabaragamu"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:contentDescription="true"
                app:srcCompat="@drawable/sabaragamu" />

            <TextView
                android:id="@+id/txt_sabaragamu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SABARAGAMUWA"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />
            <ImageButton
                android:id="@+id/imgbtn_northeast"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:contentDescription="true"
                app:srcCompat="@drawable/north" />

            <TextView
                android:id="@+id/txt_northeast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NORTH EAST"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
