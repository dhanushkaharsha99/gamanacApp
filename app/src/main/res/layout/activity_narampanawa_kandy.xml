<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg06"
    tools:context=".NarampanawaKandy">

    <Button
        android:id="@+id/btn_loc_narampanawa"
        android:layout_width="183dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:text="Location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgview_narampanawa" />

    <ImageView
        android:id="@+id/imgview_narampanawa"
        android:layout_width="323dp"
        android:layout_height="219dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/narampanawa" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="NARAMPANAWA"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_kandy4" />

    <TextView
        android:id="@+id/txt_kandy4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="KANDY"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="351dp"
        android:layout_height="170dp"
        android:contentDescription="true"
        android:duplicateParentState="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_loc_narampanawa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_kabaragala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Narampanawa is one of the most beautiful villages located close to Kandy in the Kandy District. 613 buses from Kandy.
You have to take a bus from Menikhinna to Narampanawa to reach this village.
The beauty of this village is further enhanced by the Hulu River which flows through the middle of this village which belongs to the Dumbara Valley.
The Hulu River flows through Narampanawa, doubling the beauty of the village.
When Narampanawa is mentioned, everyone remembers to take a bath. You have to go here to enjoy some cool water and enjoy the beautiful paddy fields. This is beautiful. The village of Narampanawa is lined with lush fields and beautiful mountain ranges.
 It's okay to go and come back without destroying the environment. "
                android:textColor="#000000"


                android:textStyle="bold|italic" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>