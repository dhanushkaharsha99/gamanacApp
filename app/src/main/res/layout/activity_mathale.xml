<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg05"
    tools:context=".mathale">

    <TextView
        android:id="@+id/txt_kandy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="MATALE"
        android:textColor="#03D2BE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_central3" />

    <TextView
        android:id="@+id/txt_central3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="CENTRAL"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="301dp"
        android:layout_height="491dp"
        android:contentDescription="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_kandy2"
        app:layout_constraintVertical_bias="0.431">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgbtn_bambarakiri_ella"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:contentDescription="true"
                app:srcCompat="@drawable/babarakiriella01" />

            <TextView
                android:id="@+id/babarakiri_ella"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BAMBARAKIRI Ella"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/imgbtn_dumbara_ella"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:contentDescription="true"
                app:srcCompat="@drawable/dumbaraella01" />

            <TextView
                android:id="@+id/dumbara_ella"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DUMBARA Ella"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/imgbtn_gombaniya"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:contentDescription="true"
                app:srcCompat="@drawable/gombaniya" />

            <TextView
                android:id="@+id/gombaniya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GOMBANIYA"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />
            <ImageButton
                android:id="@+id/imgbtn_sera_ella"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:contentDescription="true"
                app:srcCompat="@drawable/seraella" />

            <TextView
                android:id="@+id/sera_ella"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SERA ELLa"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/imgbtn_pitawela_pathana"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:contentDescription="true"
                app:srcCompat="@drawable/pitawelapathana02" />

            <TextView
                android:id="@+id/pitawela_pathana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PITAWELA PATHANA"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>