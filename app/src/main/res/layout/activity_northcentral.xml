<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg03"
    tools:context=".northcentral">

    <ImageButton
        android:id="@+id/imgbtn_polonnaruwa"
        android:layout_width="305dp"
        android:layout_height="188dp"
        android:contentDescription="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn_anurapura"
        app:layout_constraintVertical_bias="0.488"
        app:srcCompat="@drawable/polonnaru" />

    <TextView
        android:id="@+id/txt_polonnaru2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POLONNARUWA"
        android:textColor="#FDFDFD"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/imgbtn_polonnaruwa"
        app:layout_constraintEnd_toEndOf="@+id/imgbtn_polonnaruwa"
        app:layout_constraintStart_toStartOf="@+id/imgbtn_polonnaruwa"
        app:layout_constraintTop_toTopOf="@+id/imgbtn_polonnaruwa" />

    <ImageButton
        android:id="@+id/imgbtn_anurapura"
        android:layout_width="308dp"
        android:layout_height="194dp"
        android:layout_marginTop="64dp"
        android:contentDescription="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_northcentral2"
        app:srcCompat="@drawable/anurapura" />

    <TextView
        android:id="@+id/txt_polonnaru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANURADHAPURA"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/imgbtn_anurapura"
        app:layout_constraintEnd_toEndOf="@+id/imgbtn_anurapura"
        app:layout_constraintStart_toStartOf="@+id/imgbtn_anurapura"
        app:layout_constraintTop_toTopOf="@+id/imgbtn_anurapura" />

    <TextView
        android:id="@+id/txt_northcentral2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="NORTH CENTRAL"
        android:textColor="#03D2BE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_7sl" />

    <TextView
        android:id="@+id/txt_7sl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Sri Lanka"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>